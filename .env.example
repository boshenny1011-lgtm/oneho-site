# WooCommerce REST API 配置
WC_BASE_URL=https://linexpv.com
WC_CONSUMER_KEY=ck_xxx
WC_CONSUMER_SECRET=cs_xxx

# Stripe 配置
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# 网站 URL（本地开发用 localhost，生产环境用实际域名）
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# 可选：Bolt 环境 mock 开关
# NEXT_PUBLIC_USE_MOCK=true

# 注册审核 + 邮件通知（方案 A：待审核通过才能登录）
# 新用户注册时发邮件到此地址；未配置则仅打 log
ADMIN_EMAIL=admin@example.com
# Resend 发信（https://resend.com）；未配置则不发邮件
# RESEND_API_KEY=re_xxx
# 管理员审核 API 密钥；审核通过时 POST /api/auth/approve 需带 Authorization: Bearer <ADMIN_APPROVE_SECRET>
ADMIN_APPROVE_SECRET=your-secret-here
